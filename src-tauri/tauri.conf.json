{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BlueArchiveGM",
  "version": "1.0.0",
  "identifier": "com.KitanoSakura.BaGMTool",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "BlueArchiveGM",
        "width": 1536,
        "height": 864,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": {
      "app": {
        "targets": ["nsis"]
      },
      "nsis": {
        "portableMode": true,
        "oneClick": false,
        "allowElevation": true,
        "allowToChangeInstallationDirectory": true
      }
    },
    "icon": [
      "icons/app.ico",
      "icons/app.ico",
      "icons/app.ico",
      "icons/app.ico",
      "icons/app.ico"
    ]
  }
}
