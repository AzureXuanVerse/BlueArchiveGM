{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "BlueArchiveGM",
  "version": "1.0.3",
  "identifier": "com.KitanoSakura.BaGMTool",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "BlueArchiveGM",
        "width": 1536,
        "height": 864,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "./icons/app.ico",
      "./icons/app.ico",
      "./icons/app.ico",
      "./icons/app.ico",
      "./icons/app.ico"
    ]
  }
}